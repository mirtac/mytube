struct Record{
		char id[20];
		char title[500];
		char published[50];
		char content[500];
		char category[50];
		char duration[30];
		char favoriteCount;
		char viewCount[30];
		char author[100];
		char keyword[50];
		char uid[30];
		int isAssign[11];
};


